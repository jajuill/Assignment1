import com.example.assignment1.Claim;

public class ClaimList {
	

	protected ArrayList<Claim> claimList;
	
	public ClaimList() {
		claimList = new ArrayList<Claim>();
	}
	Object tempClaim;//best way to pass claim object.  SHOULD BE CLAIM NOT OBJ
